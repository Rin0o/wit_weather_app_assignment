<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:id="@+id/main_container"
    android:background="@color/colorBase"
    android:padding="@dimen/card_margin"
    android:clipToPadding="true"
    android:weightSum="1">

    <LinearLayout
        android:id="@+id/base_info_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="0.6">

        <TextView
            android:id="@+id/fast_adapter_weather_country"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:ellipsize="start"
            android:text="@string/string_na"
            android:textColor="@color/primary"
            android:textSize="@dimen/big_text"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/fast_adapter_weather_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:ellipsize="start"
            android:text="@string/string_na"
            android:textSize="@dimen/medium_text" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/fast_adapter_weather_humidity_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_weather_humidity" />

            <TextView
                android:id="@+id/fast_adapter_weather_humidity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/card_half_margin"
                android:maxLines="1"
                android:text="@string/string_na"
                android:textColor="@color/md_black_1000"
                android:textSize="@dimen/small_text" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/fast_adapter_weather_max_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_weather_max_temp" />

            <TextView
                android:id="@+id/fast_adapter_weather_max_temp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/card_half_margin"
                android:maxLines="1"
                android:text="@string/string_na"
                android:textColor="@color/md_black_1000"
                android:textSize="@dimen/small_text" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/fast_adapter_weather_min_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_weather_min_temp" />

            <TextView
                android:id="@+id/fast_adapter_weather_min_temp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/card_half_margin"
                android:maxLines="1"
                android:text="@string/string_na"
                android:textColor="@color/md_black_1000"
                android:textSize="@dimen/small_text" />


        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/temp_info_layout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_weight="0.4">


        <TextView
            android:id="@+id/fast_adapter_weather_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:maxLines="1"
            android:text="@string/string_na"
            android:textColor="@color/primary"
            android:textSize="@dimen/monster_text" />

        <ImageView
            android:id="@+id/fast_adapter_weather_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_weather_clear" />


    </LinearLayout>


</LinearLayout>